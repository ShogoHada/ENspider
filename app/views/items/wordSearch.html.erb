<%= link_to 'ゲーム', root_path %>
<h1>ワード検索</h1>
<%= search_form_for @q, url: wordSearch_items_path do |f| %>
  <%= f.label :word_eq, 'ワード' %>
  <%= f.search_field :word_eq,required: true %>
  <br>
  <%= f.submit '検索' %>
<% end %>
<h1>検索結果</h1>
<table>
  <thead>
    <tr>
      <td>Word</td>
      <td>Mean</td>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |item| %>
      <tr>
        <td><%= item.word %></td>
        <td><%= item.mean %></td>
      </tr>
    <% end %>
  </tbody>
</table>
